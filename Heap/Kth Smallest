


class Solution {
    public static int kthSmallest(int[] arr, int k) {
        // Your code here
        PriorityQueue<Integer> maxHeap = new PriorityQueue<>(Collections.reverseOrder()); // for maxheap
        
        
        for(var num : arr) {
            maxHeap.add(num) ; 
            
            if(maxHeap.size() > k){
                maxHeap.poll() ; 
            }
        }
        
        return maxHeap.poll() ; 
    }
}
