leetcode (1) -> https://leetcode.com/problems/two-sum/description/

class Solution {
    public int[] twoSum(int[] nums, int target) {
        // logic 
        // x +y = target 
        // y = target - x; where x is nums[i]
         HashMap<Integer,Integer> map = new HashMap<>() ; 

         for(int i=0;i<nums.length ; i++){
            int y = target - nums[i]; 
            // if y is present in map 
            if(map.containsKey(y)){
                int indexOf_y = map.get(y) ; 
                return new int[]{indexOf_y , i} ;  
            }
            // if not put in map and move forward
            else{
                map.put(nums[i] , i) ; 
            }
         }
         return new int[]{-1,-1} ; 
    }
}
